{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure task(Ninja)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}/freertos/level01/${input:level01Example}",
                "-B", "${workspaceFolder}/freertos/level01/build/Debug",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/freertos/level01/${input:level01Example}/cmake/gcc-arm-none-eabi.cmake"
            ],
            "problemMatcher": []
        },
        {
            "label": "build task(Ninja)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/freertos/level01/build/Debug",
                "-j", "${env:NUMBER_OF_PROCESSORS}"
            ],
            "problemMatcher": "$gcc",
            "dependsOn": ["configure task(Ninja)"],
            "dependsOrder": "sequence"
        },
        {
            "label": "download dap",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f", "${workspaceFolder}/freertos/level01/openocd_dap.cfg",
                "-c", "init",
                "-c", "halt",
                "-c", "program ${workspaceFolder}/freertos/level01/build/Debug/${input:level01Example}.hex verify",
                "-c", "reset",
                "-c", "shutdown"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "${env:PATH};C:\\ProgramData\\chocolatey\\bin;C:\\Program Files\\OpenOCD\\bin"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": ["build task(Ninja)"],
            "dependsOrder": "sequence"
        },
        // {
        //     "label": "log",
        //     "type": "shell",
        //     "command":"JlinkRTTClient",
        //     "args": [],
        //     "problemMatcher": [],
        //     "dependsOn":[
        //         "build task", // 可以添加多个.
        //     ]
        //     若使用daplink,则将log任务设置为依赖于jlink launch任务,保证jlink launch任务先于log任务执行
        // }
    ],
    "inputs": [
        {
            "id": "level01Example",
            "type": "pickString",
            "description": "选择 Level01 示例目录",
            "options": [
                "demo01_task_manager",
                "demo02_task_led_servo"
            ],
            "default": "demo01_task_manager"
        }
    ]
}